        nav {
            flex: 1;
            text-align: right;
            margin-top: 0px;
        }

        nav ul {
            display: inline-block;
            list-style: none;
        }

        nav ul li {
            display: inline-block;
            margin-right: 70px;
            margin-left: 20px;
        }

        nav ul li a {
            text-decoration: none;
            font-size: 25px;
            color: rgb(243, 242, 242);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
        }

        nav ul li button {
            font-size: 20px;
            color: rgb(255, 250, 250);
            outline: none;
            border: none;
            background: transparent;
            cursor: pointer;
            font-family: sans-serif;
        }

        nav ul li button:hover {
            color: aqua;
        }

        nav ul li a:hover {
